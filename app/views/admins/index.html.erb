<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col-lg-9 col-md-9 col-sm-10">
    <h1>List Admin</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= link_to '', admin, class: 'fa fa-eye' %></td>
            <td><%= link_to '', edit_admin_path(admin), class: 'fa fa-pencil-square-o' %></td>
            <td><%= link_to '', admin, class: 'fa fa-trash-o', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>
<br>
