<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class: 'label-control' %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :Post_Content, 'Content' %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :Company_name, 'Vendor Name' %><br>
    <%= f.text_field :name, value: @post.vendor.name, class: 'form-control disabled', disabled: 'disabled'  %>
  </div>
  <br>
  <div class="field">
    <%= f.label :Business_type, "Business Category" %><br>
    <%= f.select(:business) do %>
      <%  [
            # ['Catering', 1], ['Photographer', 2]
            ['Catering', 'Catering'], ['Photographer', 'Photographer']
          ].each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :image_url, 'Upload Image' %><br>
    <%= f.file_field :image_url %>
  </div>
  <br>
  <div class="field">
    <%= f.label :active, 'Activate to show: ' %>
    <%= f.select(:active, [['No', 'No'],['Yes', 'Yes']]) %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Save!', class: 'btn btn-default' %>
  </div>
<% end %>
<br>
