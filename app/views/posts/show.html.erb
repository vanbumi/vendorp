<div class="container">
  <div class="col-md-9 col-sm-12 col-xs-12">

    <p id="notice"><%= notice %></p>
     
     <div class="thumbnail">
      
        <%= image_tag(@post.image_url, class: 'img-responsive', :alt => @post.title, :width => '', :height => '') %>
      
      <div class="caption">      
        <h1><%= @post.title %></h1>
        <p><%= @post.body %></p>

        <p>
          <strong>Vendor Name:</strong>
          <%= @post.vendor.name %>
        </p>

        <p>
          <strong>Business Category:</strong>
          <%= @post.business %>
        </p>
        <% if vendor_signed_in? %>
          <p>
            <strong>Image url:</strong>
              <%= @post.image_url %>
          </p>
          <p>
            <strong>Posisi Kolom Post:</strong>
              <%= @post.kolom %>
          </p>
          <p>
            <strong>Active - Show:</strong>
            <%= @post.active %>
          </p>
      </div>
                  
            <br>
              <%= link_to 'Edit', edit_post_path(@post) %> |
              <%= link_to 'Back', posts_path %>
        <% end %>
    </div> 
  </div>  
</div>
