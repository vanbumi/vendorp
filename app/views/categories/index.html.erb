<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.title %></td>
          <td><%= category.active %></td>
          <td><%= link_to '', category, class: 'fa fa-eye' %></td>
          <td><%= link_to '', edit_category_path(category), class: 'fa fa-pencil-square-o' %></td>
          <td><%= link_to '', category, class: 'fa fa-trash-o', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<%= link_to ' New Category', new_category_path, class: 'fa fa-plus-square-o' %>
</div>
<br>


