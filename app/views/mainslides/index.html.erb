<p id="notice"><%= notice %></p>

<h1>Listing Mainslides</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Descrip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mainslides.each do |mainslide| %>
      <tr>
        <td><%= mainslide.title %></td>
        <td><%= mainslide.descrip %></td>
        <td><%= link_to 'Show', mainslide %></td>
        <td><%= link_to 'Edit', edit_mainslide_path(mainslide) %></td>
        <td><%= link_to 'Destroy', mainslide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

