<!DOCTYPE html>
<html>
<head>
  <title>Halaman Vendor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <style type="text/css">
  h2{
      /*margin: 0;*/     
      /*color: #666;*/
      padding-top: 20px;
      /*font-size: 52px;*/
      /*font-family: "trebuchet ms", sans-serif;*/    
  }
  .item{
      background: #EC008C;    
      text-align: center;
      height: 450px !important;
  }
  .carousel{
      margin-top: 20px;
  }
  .bs-example{
    margin: 20px;
  }
  </style>

</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Dashboard-Vendor", vendors_page_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">

            <!-- <li><a href="#">Dashboard</a></li>-->
            <% if current_vendor.supervendor? %>
            <li><%= link_to 'Halaman Admin', admins_path %></li>
            <% end %>

            <% if vendor_signed_in? %>
            <li><%= link_to current_vendor.name, current_vendor %></li>
            <li><%= link_to 'My Profile', current_vendor %></li>
            <% end %>
            <li><%= link_to 'Sign Out', destroy_admin_session_path, method: :delete %></li>

            <!-- <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
