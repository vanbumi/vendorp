<p id="notice"><%= notice %></p>

<h1>Listing Sections (Jenis Usaha)</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.content %></td>
        <td><%= link_to '', section, class: 'glyphicon glyphicon-eye-open' %></td>
        <td><%= link_to '', edit_section_path(section), class: 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to '', section, class: 'glyphicon glyphicon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New', new_section_path, class: 'btn btn-default' %>
