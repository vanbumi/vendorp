<div class="container"> 

  <div class="col-md-9 col-sm-9 col-xs-12">
    
    <p id="notice"><%= notice %></p>
  
      <p align="center">
        <%= image_tag(@article.image_url, :alt => @article.title, class: 'img-responsive') %>
      </p>
      
      <div class="caption">
        <h1><%= @article.title %></h1>  
        <p>
          <strong>Category:</strong>
          <%= @article.category.title %> |
          <strong>Author:</strong> 
          <%= @article.admin.name %> |
          <strong>Date: </strong>
          <%= @article.created_at.strftime("%d %B %Y") %> 
        </p>
        <hr>
        <br>  
        <!-- content -->
        <div class="row">

          <!-- leftside -->
          <%= render 'shared/leftside' %>
          <!-- #leftside -->
        
          <!-- main content -->
          <div class="content col-md-10 col-sm-10 col-xs-12">
            <p>
              <%= sanitize @article.body %>
            </p>

            <!-- condition -->
            <% if @article.category.title == 'Coupon' %>
              <p>
                <strong>Harga Awal:</strong>
                <%= @article.harga_awal %>
              </p>

              <p>
                <strong>Discount:</strong>
                <%= @article.discount %>
              </p>

              <p>
                <strong>Harga Sesudah:</strong>
                <%= @article.harga_sesudah %>
              </p>

              <p>
                <strong>Periode Awal:</strong>
                <%= @article.time_awal %>
              </p>

              <p>
                <strong>Periode Akhir:</strong>
                <%= @article.time_akhir %>
              </p>

              <p>
                <strong>Nama Vendor:</strong>
                <%= @article.vendor.name if @article.vendor %>
              </p>

              <p>
                <strong>Syarat & Ketentuan:</strong>
                <%= @article.syarat %>
              </p>

              <p>
                <strong>Info Vendor:</strong>
                <%= @article.info_vendor %>
              </p>
            <% end %>
          </div><!-- content -->        
        </div><!-- row -->     
      </div>  
      
        
      <br>
      <br>

      <% if admin_signed_in? %>
        <%= link_to 'Edit', edit_article_path(@article), 'data-no-turbolink' => true %> |
        <%= link_to 'Back', articles_path %>
      <% end %>  
      <br>
      <br>

    </div>

    <!-- sidebar -->
    <div class="col-md-3">
      <%= render 'shared/sidebar2' %>
    </div>

</div>  