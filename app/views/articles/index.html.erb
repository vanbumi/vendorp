<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row bg-primary">  
    <div class="col-md-7 col-xs-12"> 
      <h1>Listing Articles</h1>
    </div>
    <div class="col-md-5 col-xs-10 text-right" style="padding-top:20px"> 
      <%= link_to 'New Article', new_article_path, 'data-no-turbolink' => true, class: 'btn btn-default' %>
    </div>
  </div>  
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Body</th>
          <th>Image url</th>
          <th>Author</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.category.title if article.category %></td>
            <td><%= truncate(strip_tags(article.body), length: 100) %></td>
            <td><%= article.image_url %></td>
            <td><%= article.author %></td>
            <td><%= link_to 'Show', article %></td>
            <td><%= link_to 'Edit', edit_article_path(article), 'data-no-turbolink' => true %></td>
            <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
  <br>
  
</div>