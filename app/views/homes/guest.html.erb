
    <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
          <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          </p>
          <div class="jumbotron">
              <div class="row">
                <h1>Welcome our Guests</h1>
              </div>  
          </div>

          <div class="row">
            <div class="col-xs-6 col-lg-4">
              <% @posts.each do |post| %>
              <h3><%= truncate(post.title, length: 20) %></h3>
              <p><%= image_tag(post.image_url.url(:thumb), :alt => 'image not available') %></p>
              <p>Vendor Name: <%= post.vendor.name if post.vendor %></p>
              <p>Business Category: <%= post.business %></p>
              <p><%= truncate(post.body, length: 100) %></p>
              <p><%= link_to 'View details', vendors_singlepost_path(post), class: 'btn btn-default' %></p>
              
              <% end %>
              <br>
              <!-- PREV POST -->
              <h3>Baca Juga</h3>
              <% @postsrows.each do |postsrow| %>
              <p style="border-bottom:1px #eee solid"><%= truncate(postsrow.title, length: 50) %></p>
              <% end %>
            </div><!--/.col-xs-6.col-lg-4-->

