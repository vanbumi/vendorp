
<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-9">
      <p class="pull-right visible-xs">
        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
      </p>
          
      <%= render "shared/sliderdua" %>  

      <div class="container">  
        <!-- <div class="row" style="margin-left:5px;" ><h3>Coupons</h3></div> -->
        
        <div class="row">
          <h3>Coupons</h3>
          <ul class="list-inline">
            <% @articles.each do |article| %>
            <li>
              <%= image_tag article.image_url.url(:thumb), :alt => 'article.title', class: 'img-responsive' %>
              <div class="caption">
                <h4><%= truncate(article.title, length: 21) %></h4>
              </div>
              <p>Category: <%= article.category.title %></p>              
              <p><%= truncate(strip_tags(article.body.html_safe), length: 30) %></p>
              
              <p><%= link_to 'Read Detail', home_path(article) %></p>
            </li>
            <% end %>
          </ul>
        </div>
        
        <div class="clearfix visible-xs-block"></div>
        
        <div class="row">
          <h3>Articles Event</h3>
          <ul class="list-inline">
            <% @articles2.each do |article2| %>
            <li>
              <%= image_tag article2.image_url.url(:thumb), :alt => 'article2.title', class: 'img-responsive' %>
              <div class="caption">
                <h4><%= truncate(article2.title, length: 21) %></h4>
              </div>
              <p>Category: <%= article2.category.title %></p>              
              <p><%= truncate(article2.body, length: 30) %></p>
              <p><%= link_to 'Read Detail', home_path(article2) %></p>
            </li>
            <% end %>
          </ul>
        </div> 

        <div class="clearfix visible-xs-block"></div>
        
        <div class="row">
          <h3>Events</h3>
          <ul class="list-inline">
            <% @articles3.each do |article3| %>
            <li>
              <%= image_tag article3.image_url.url(:thumb), :alt => 'article3.title', class: 'img-responsive' %>
              <div class="caption">
                <h4><%= truncate(article3.title, length: 21) %></h4>
              </div>
              <p>Category: <%= article3.category.title %></p>              
              <p><%= truncate(article3.body, length: 30) %></p>
              <p><%= link_to 'Read Detail', home_path(article3) %></p>
            </li>
            <% end %>
          </ul>
        </div>        
        
        <div class="clearfix visible-xs-block"></div>
        
      </div>  

      <div class="row">
                              
    </div><!--/row-->
    </div><!--/.col-xs-12.col-sm-9-->

    <%= render 'shared/sidebar' %>

  </div><!--/row-->

  <hr>

</div><!--/.container-->