
<!-- this wedding template -->
<div class="container">

  <div class="row row-offcanvas row-offcanvas-right">

    <div class="col-xs-12 col-md-9">
      <!-- <p class="pull-right visible-xs">
        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
      </p> -->
      <div class="jumbotron">
        <div class="row">
          <h1>Vendor List</h1>
        </div>  
      </div>

      <div class="row">

        <!-- kolom 1 -->
        <div class="col-xs-6 col-md-6">
          <% @posts.each do |post| %>
          <div class="thumbnail">
          <%= image_tag(post.image_url, :alt => 'please insert image') %>
            <div class="caption">
              <h3><%= truncate(post.title, length: 20) %></h3>
              <p>Vendor Name: <span class="label label-danger"><%= post.vendor.name if post.vendor %></span></p>
              <p>Business Category: <%= post.section.name %></p>
              <p><%= truncate(post.body, length: 100) %></p>
              
              <p><%= link_to 'View details', post_path(post), class: 'btn btn-default' %></p>
            </div>  
          </div>
          <% end %> 
          <br>
          <!-- PREV POST -->
          <h3><i class="fa fa-chevron-circle-down"></i> Baca Juga</h3>
          <% @postsrows.each do |postsrow| %>
            <p style="border-bottom:1px #eee solid"><%= link_to truncate(postsrow.title, length: 50), post_path(postsrow) %></p>
          <% end %> 
        </div><!--/.col-xs-6.col-lg-4-->

        <!-- kolom 2 -->
        <div class="col-xs-6 col-md-6">
          <% @postscol2s.each do |postscol2| %>
          <div class="thumbnail">
            <%= image_tag(postscol2.image_url, class: 'img-responsive', :alt => 'image not available') %>
            <div class="caption">  
              <h3><%= truncate(postscol2.title, length: 20) %></h3>
              <p>Vendor Name: <span class = "label label-danger"><%= postscol2.vendor.name if postscol2.vendor %></span></p>
              <p>Business Category: <%= postscol2.section.name %></p>
              <p><%= truncate(postscol2.body, length: 100) %></p>
              <p><%= link_to 'View details', post_path(postscol2), class: "btn btn-default" %></p>
            </div>  
          </div>  
          <% end %>  
          <br>
          <!-- PREV POST -->
          <h3><i class="fa fa-chevron-circle-down"></i> Baca Juga</h3>
            <% @postsrowsc3s.each do |postsrowsc3| %>
            <p style="border-bottom:1px #eee solid"><%= link_to truncate(postsrowsc3.title, length: 50), post_path(postsrowsc3) %></p>
          <% end %>
        </div><!--/.col-xs-6.col-lg-4-->
      </div><!--/row-->

      <br>

    </div><!--/.col-xs-12.col-sm-9-->

    <!-- sidebar -->
    <div class="col-md-3">
      <%= render 'shared/sidebar2' %>
    </div>
    

  </div><!--/row-->
</div>  

