<div class="container"> 
	
  <div class="row row-offcanvas row-offcanvas-right">

  <div class="col-xs-12 col-sm-9" style="padding-top: 19px">
    <p class="pull-right visible-xs">
      <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
    </p>
    <!-- <div class="panel panel-default"> -->
      <!-- <div class="panel-heading"> -->
      <!-- </div> -->  
      <!-- <div class="panel-body"> -->
        
        <p><%= image_tag(@articles.image_url, :width => '800', :height => '450') %></p>
        <div class="page-header">      
          <h1><%= @articles.title %></h1>
          <small>Category: <%= @articles.category.title %> | Author: <%= @articles.author %></small><br>
        </div>
        <p></p>

        <% if @articles.category.title == 'Coupon' %>

        <form class="form-horizontal">
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label"><%= 'Nama Vendor: ' %></label>
            <div class="col-sm-6">
              <input type="email" class="form-control" id="inputEmail3" placeholder="<%= @articles.vendor.name if @articles.vendor %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Harga Awal Rp: ' %></label>
            <div class="col-sm-6">
              <input type="password" class="form-control" id="inputPassword3" placeholder="<%= @articles.harga_awal %>"  >
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Discount: ' %></label>
            <div class="col-sm-6">
              <input type="password" class="form-control" id="inputPassword3" placeholder="<%= @articles.discount %>"  >
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Harga Sekarang Rp: ' %></label>
            <div class="col-sm-6">
              <input type="password" class="form-control" id="inputPassword3" placeholder="<%= @articles.harga_sesudah %>"  >
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Periode: ' %></label>
            <div class="col-sm-2">
              <input type="password" class="form-control" id="inputPassword3" placeholder="<%= @articles.time_awal %>">  
            </div>
            <div class="col-sm-1">
              <label>berlaku hingga</label>
            </div>
            <div class="col-sm-2">
              <input type="password" class="form-control" id="inputPassword3" placeholder="<%= @articles.time_akhir %>">  
            </div>  
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Nama Vendor: ' %></label>
            <div class="col-sm-6">
              <input type="password" class="form-control" id="inputPassword3" placeholder="<%= @articles.vendor.name %>"  >
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Syarat & Ketentuan: ' %></label>
            <div class="col-sm-6">
              <textarea type="text" class="form-control" placeholder="<%= @articles.syarat %>"></textarea> 
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label"><%= 'Vendor Info: ' %></label>
            <div class="col-sm-6">
              <textarea type="text" class="form-control" placeholder="<%= @articles.info_vendor %>"></textarea> 
            </div>
          </div>

        </form>
          
        <% end %>

        <p><%= sanitize @articles.body %></p>
      <!-- </div> -->              
    <!-- </div> -->             
  </div><!--/.col-xs-12.col-sm-9-->

  <%= render 'shared/sidebar' %>

</div><!--/row-->

</div>	
