<div class="container">

  <div class="row row-offcanvas row-offcanvas-right">

    <div class="col-xs-9 col-md-9">
          <!-- <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          </p> -->
          <div class="jumbotron">
              <div class="row">
                <h1>Artikel Wedding</h1>
              </div>  
          </div>

          <!-- main body -->
          <div class="row">
                 
            <div class="col-sm-6 col-lg-6 col-md-6">
              <div class="lead text-center bg-primary">Articles</div>  
              <ul class="list-unstyled list-inline"> 
                <% @articles2.each do |article2| %>     
                <li>  
                  
                    <div class="thumbnail">
                      <%= image_tag article2.image_url.url(:thumb), :alt => 'article2.title', class: 'img-responsive' %>
                        <div class="caption">
                        
                          <h4 class="pull-right"><span class='label label-primary'>New</span></h4>
                            <h4><%= link_to truncate(article2.title, length: 21), article_path(article2) %></h4>
                          <p class="pull-right"><%= article2.author %></p>
                            <p>Author</p>  
                          <p><%= truncate(strip_tags(article2.body), length: 80) %></p>
                        </div>
                        <div class="ratings">
                          <p class="pull-right">15 reviews</p>
                          <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                          </p>
                        </div>
                    </div>
                  
                </li>
                <% end %> 
              </ul>
            </div>

          </div><!-- row --><!-- main body -->
        </div><!--/.col-xs-12.col-sm-9-->
        <!-- sidebar -->
        <div class="col-md-3">
          <%= render 'shared/sidebar2' %>
        </div>
  </div><!--/row-->
</div>  
  

